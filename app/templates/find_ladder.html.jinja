{% extends "base.html.jinja" %}
{% set find_ladder_active = "active" %}
{% block message_content %}
    {% for message in messages %}
        {% if message %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Warning!</strong> {{ message }}
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="alert"
                        aria-label="Close"></button>
            </div>
        {% endif %}
    {% endfor %}
{% endblock message_content %}
{% block content %}
    <form action="{{ url_for('find_ladder') }}"
          method="POST"
          style="width:auto">
        <div class="row g-2 align-items-center">
            <div style="width:20vh;">
                <label for="starting_article" class="form-label">Starting article</label>
            </div>
            <div class="col-auto">
                <input type="text"
                       class="form-control"
                       name="starting_article"
                       id="starting_article"
                       aria-describedby="startingArticleHelp"
                       value="{{ starting_article }}">
            </div>
            <div class="col-auto">
                <button type="button"
                        class="btn btn-primary"
                        onclick="window.location.href='{{ url_for('find_ladder', starting_article=starting_article, ending_article=ending_article, random=1) }}'">
                    <i class="bi bi-dice-5"></i>
                </button>
            </div>
        </div>
        <br>
        <div class="row g-2 align-items-center">
            <div style="width:20vh;">
                <label for="ending_article" class="form-label">Ending article</label>
            </div>
            <div class="col-auto">
                <input type="text"
                       class="form-control"
                       id="ending_article"
                       name="ending_article"
                       aria-describedby="endingArticleHelp"
                       value="{{ ending_article }}">
            </div>
            <div class="col-auto">
                <button type="button"
                        class="btn btn-primary"
                        onclick="window.location.href='{{ url_for('find_ladder', starting_article=starting_article, ending_article=ending_article, random=2) }}'">
                    <i class="bi bi-dice-5"></i>
                </button>
            </div>
        </div>
        <br>
        <br>
        <div class="row justify-content-center">
            <div class="col-1">
                <button type="submit" class="btn btn-success">Find</button>
            </div>
        </div>
    </form>
{% endblock content %}
